      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0,
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      }
    },

    {
      "type": "row",
      "title": "ðŸ“Š RANKING Y COMPARATIVAS",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 },
      "collapsed": false
    },
    {
      "type": "table",
