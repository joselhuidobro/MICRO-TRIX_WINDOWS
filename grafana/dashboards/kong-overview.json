{
  "id": null,
  "uid": "trix-resource-analysis",
  "title": "ðŸŽ¯ TRIX â€” AnÃ¡lisis de Recursos por Servicio",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, job)",
        "includeAll": true,
        "refresh": 2,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  
  "panels": [
    {
      "type": "row",
      "title": "ðŸš¨ TOP CONSUMIDORES - IDENTIFICA EL PROBLEMA",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "bargauge",
      "title": "ðŸ”´ CPU por Servicio (ACTUAL)",
      "description": "Muestra el consumo ACTUAL de CPU por servicio. Valores altos indican servicios problemÃ¡ticos.",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum by (job) (rate(process_cpu_seconds_total{job=~\"$job\"}[5m])) * 100",
          "legendFormat": "{{job}}",
          "instant": true
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          },
          "mappings": []
        }
      }
    },
    {
      "type": "bargauge",
      "title": "ðŸ’¾ Memoria por Servicio (ACTUAL)",
      "description": "Muestra el consumo ACTUAL de memoria RAM por servicio en MB.",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum by (job) (go_memstats_alloc_bytes{job=~\"$job\"}) / 1024 / 1024",
          "legendFormat": "{{job}}",
          "instant": true
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "MB",
          "min": 0,
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "orange", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "type": "bargauge",
      "title": "âš¡ Goroutines Activas por Servicio",
      "description": "Muchas goroutines pueden indicar fugas de memoria o problemas de concurrencia.",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 11 },
      "targets": [
        {
          "expr": "sum by (job) (go_goroutines{job=~\"$job\"})",
          "legendFormat": "{{job}}",
          "instant": true
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "orange", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "type": "bargauge",
      "title": "ðŸ“¡ Peticiones HTTP/s por Servicio",
      "description": "TrÃ¡fico de red - servicios con muchas peticiones pueden causar lentitud.",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 11 },
      "targets": [
        {
          "expr": "sum by (job) (rate(prometheus_http_request_duration_seconds_count{job=~\"$job\"}[5m])) or sum by (job) (rate(grafana_http_request_duration_seconds_count{job=~\"$job\"}[5m]))",
          "legendFormat": "{{job}}",
          "instant": true
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
