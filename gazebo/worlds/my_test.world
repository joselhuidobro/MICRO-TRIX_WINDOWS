<sdf version="1.6">
  <world name="default">
    <physics type="ode">
      <gravity>0 0 -9.81</gravity>
    </physics>

    <!-- ROS 2 bridge (necesario para /set_entity_state, etc.) -->
    <plugin name="gazebo_ros2_init" filename="libgazebo_ros_init.so"/>
    <plugin name="gazebo_ros2_factory" filename="libgazebo_ros_factory.so"/>

    <include><uri>model://sun</uri></include>
    <include><uri>model://ground_plane</uri></include>

    <!-- Cubo en el origen, a 1 m de altura -->
    <model name="cube1">
      <static>false</static>
      <pose>0 0 1 0 0 0</pose>
      <link name="link">
        <inertial><mass>1</mass></inertial>
        <collision name="col">
          <geometry><box><size>1 1 1</size></box></geometry>
        </collision>
        <visual name="vis">
          <geometry><box><size>1 1 1</size></box></geometry>
        </visual>
      </link>
    </model>
  </world>
</sdf>

